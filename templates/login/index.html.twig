{% extends "plantillas/layout_auth.html.twig" %}

{% block body %}
   <div class="container-fluid">
      <div class="row">
        <div class="col-xl-7"><img class="bg-img-cover bg-center" src="{{ asset('/assets/images/login/2.jpg') }}" alt="looginpage"></div>
        <div class="col-xl-5 p-0">
          <div class="login-card">
            <div>
             
              <div class="login-main"> 
                <form action="{{ path('app_login') }}" method="post">
                  <h4>Login</h4>

                  {% if error %}
                      <div>{{ error.messageKey|trans(error.messageData, 'security') }}</div>
                  {% endif %}
                  <div class="form-group">
                    <label class="col-form-label">Email </label>
                    <input class="form-control" type="email" id="username" name="_username" value="{{ last_username }}" required="" placeholder="Test@gmail.com">
                  </div>
                  <div class="form-group">
                    <label class="col-form-label">Contraseña</label>
                    <div class="form-input position-relative">
                      <input class="form-control" type="password" id="password" name="_password" required="" placeholder="*********">
                                          </span></div>
                    </div>
                  </div>
                  <div class="form-group mb-0">
                    <button class="btn btn-primary btn-block w-100 mt-3" type="submit">Entrar</button>
                  </div>
                 
                  <p class="mt-3 mb-0 text-center">¿No tienes una cuenta? <a class="ms-2" href="{{ path('register') }}">Registrarse</a></p>
                </form>
              </div>
            </div>
          </div>
        </div>
      </div>
{% endblock %}
