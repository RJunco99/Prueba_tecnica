<div class="site-section bg-light">
    <div class="container">
        <div class="row mb-5" data-aos="fade-up">
            <div class="col-md-12 text-center">
                <h2 class="font-weight-bold text-black">Últimos Podcasts</h2>
            </div>
        </div>
        {% if app.user %}
        <div class="row mb-5" data-aos="fade-up">
            <div class="col-md-12 text-center">
                <form action="{{ path('search_podcasts') }}" method="GET">
                    <div class="input-group">
                        <input type="text" class="form-control" placeholder="Buscar podcasts" name="query">
                        <button class="btn btn-primary" type="submit">Buscar</button>
                    </div>
                </form>
            </div>
        </div>
        {% endif %}
        {% if podcasts is not empty %}
            {% for podcast in podcasts %}
                <div class="d-block d-md-flex podcast-entry bg-white mb-5" data-aos="fade-up">
                    <div class="image" style="background-image: url('{{ asset('assets/images/' ~ podcast.imagen) }}');"></div>
                    <div class="text">
                        <h3 class="font-weight-light"><a href="single-post.html">{{ podcast.titulo }}</a></h3>
                        <div class="text-white mb-3"><span class="text-black-opacity-05"><small>By {{ podcast.autor }}  <span class="sep">/</span> {{ podcast.fechaSubida|date('d F Y') }}  </small></span></div>
                        <p class="mb-4">{{ podcast.descripcion }}</p>
                        <div class="player">
                            <audio id="player2" preload="none" controls style="max-width: 100%">
                                <source src="{{ asset('assets/audio/' ~ podcast.audio) }}" type="audio/mp3">
                            </audio>
                        </div>
                    </div>
                </div>
            {% endfor %}
        {% else %}
            <div class="text-center">
                {% if app.user and form.vars.data.query is not empty %}
                    <p>No se encontraron podcasts para la búsqueda "{{ form.vars.data.query }}".</p>
                {% else %}
                    <p>No hay podcasts disponibles.</p>
                {% endif %}
            </div>
        {% endif %}
    </div>
