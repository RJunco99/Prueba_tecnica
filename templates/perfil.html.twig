<html lang="en">

	<head>
		{% include "plantillas/css.html.twig" %}

		<!-- Plugins css Start-->
		{% block css %}{% endblock %}
		<!-- Plugins css Ends-->
		<link rel="stylesheet" href="{{ asset('assets/css/front/fonts/icomoon/style.css') }}">
		<link rel="stylesheet" type="text/css" href="{{ asset('assets/css/front/bootstrap.min.css') }}">

		<link
		rel="stylesheet" type="text/css" href="{{ asset('assets/css/front/bootstrap.min.css') }}">
		{# <link rel="stylesheet" type="text/css" href="{{ asset('assets/css/front/aos.css') }}"> #}
		<link
		rel="stylesheet" type="text/css" href="{{ asset('assets/css/front/style.css') }}">
		<!-- Bootstrap css-->
		<link
		rel="stylesheet" type="text/css" href="{{ asset('assets/css/vendors/bootstrap.css') }}">
		<!-- App css-->
		<link rel="stylesheet" type="text/css" href="{{ asset('assets/css/style.css') }}">
		<link
		id="color" rel="stylesheet" href="{{ asset('assets/css/color-1.css') }}" media="screen">
		<!-- Responsive css-->
		<link rel="stylesheet" type="text/css" href="{{ asset('assets/css/responsive.css') }}">
      
        <style>
			.img-fixed-size {
    width: 200px; /* El tamaño deseado para las imágenes en píxeles */
    height: 200px;
    object-fit: cover; /* Para asegurarse de que las imágenes se ajusten correctamente al tamaño */
}

		</style>
	</head>

	{% block body %}


		<header class="site-navbar py-4 absolute transparent" role="banner">

			<div class="container">
				<div class="row align-items-center">


					<div class="col-3" data-aos="fade-down">
						<h1>
							<a href="/" class="text-white h2">Prueba</a>
						</h1>
					</div>
					<div class="col-9" data-aos="fade-down">
						<nav class="site-navigation position-relative text-right text-md-right" role="navigation">
							<ul class="site-menu js-clone-nav">
								{% if app.user %}
									<li>
										<a href="{{ path('perfil') }}">Perfil de
											{{ app.user.nombre }}</a>
									</li>
									<li>
										<a href="{{ path('app_logout') }}">Logout</a>
									</li>
								{% else %}
									<li>
										<a href="{{ path('login') }}">Login</a>
									</li>
								{% endif %}
							</ul>
						</nav>
					</div>

				</div>

			</header>

            <div class="site-blocks-cover overlay" style="background-image: url(assets/images/aire.png);">
            <div class="container">
                <div class="row align-items-center justify-content-center text-center">
                    <div class="col-md-8">
                        <h2 class="text-white font-weight-light mb-2 display-4">Perfil</h2>
                    </div>
                </div>
            </div>
        </div>
        
			<!-- Container-fluid starts-->
			
		<div class="file-content">
			<div class="card" style="background-color: #white;">
				<div class="card-header custom-header " style="background-color: #d4b494;">
					<div class="media">
						<form class="form-inline" action="{{ path('search_perfil')}}"  method="get"  style="border: 1px solid black;">
                        <div class="form-group mb-0"  >
                    <i class="fa fa-search"></i>
                    
				
					
						
							<input type="text"class="form-control-plaintext" placeholder="Buscar podcasts" name="query">
							{# <button class="btn " type="submit">Buscar</button> #}
						
					
				</div>
			</div>
						</form>
						<div class="media-body text-end">
							<a href="{{ path('subir_podcast') }}" class="btn" style="background-color:#fcebe3">
								<i data-feather="upload"></i>Upload
							</a>
						</div>
					</div>
				</div>
				<!-- Resto de tu código HTML -->

				<div class="card-body file-manager">
	<ul class="files">
		{% if podcasts is empty %}
			<p>No hay podcasts disponibles.</p>
		{% else %}
			<ul>
				{% for podcast in podcasts %}
					<li class="file-box" style="background-color:#fcebe3; border: 1px solid black;">
						<div>
							<strong>Título:</strong>
							{{ podcast.titulo }}
							<br>
							<strong>Fecha de Subida:</strong>
							{{ podcast.fechaSubida|date('Y-m-d H:i:s') }}
							<br>
							<strong>Descripción:</strong>
							{{ podcast.descripcion }}
						</div>
						<br>
						<strong>Audio:</strong>
						{{ podcast.audio }}
						<br>
                            <hr>
						<audio controls>
							<source src="{{ asset('assets/audio/' ~ podcast.audio) }}" type="audio/mpeg">
							Tu navegador no admite la reproducción de audio.
						</audio>
                        <hr>
						<br>
						<strong>Imagen:</strong>
						<img src="{{ asset('assets/images/' ~ podcast.imagen) }}" alt="Imagen del podcast" class="img-fixed-size">
						<hr>
						<a href="{{ path('editar_podcast', { 'id': podcast.id }) }}" class="btn" style="background-color: #7c9c9c;">Editar</a>
						<a href="{{ path('eliminar_podcast', { 'id': podcast.id }) }}" class="btn" style="background-color: #dc747c;">Eliminar</a>
					</li>
				{% endfor %}
			</ul>
		{% endif %}
	</ul>
</div>


				<!-- Resto de tu código HTML -->

			</div>
		</div>
	</div>
</div>
	</html>
</div></div><footer class="site-footer">
<div class="container">
	<div class="row">
		<div class="col-lg-4">
			<div class="mb-5">
				<h3 class="footer-heading mb-4">About Us</h3>
				<p>Pagina para subir podcast, realizada con symfony y bootstrap</p>
			</div>


		</div>
		<div class="col-lg-4 mb-5 mb-lg-0">
			<div class="row mb-5">
				<div class="col-md-12">
					<h3 class="footer-heading mb-4">Menu</h3>
				</div>
				<div class="col-md-6 col-lg-6">
					<ul class="list-unstyled">
						<li>
							<a href="{{ path('login') }}">Login</a>
						</li>
						<li>
							<a href="{{ path('perfil') }}">Perfil</a>
						</li>

					</ul>
				</div>
				<div class="col-md-6 col-lg-6">
					<ul class="list-unstyled">
						<li>
							<a href="#">About Us</a>
						</li>
						<li>
							<a href="#">Privacy Policy</a>
						</li>

					</ul>
				</div>
			</div>


		</div>


	</div>

</div></footer>{% endblock %}{% block script %}<script src="{{ asset('assets/js/icons/feather-icon/feather-icon-clipart.js') }}"></script><script src="{{ asset('assets/js/typeahead/handlebars.js') }}"></script><script src="{{ asset('assets/js/typeahead/typeahead.bundle.js') }}"></script><script src="{{ asset('assets/js/typeahead/typeahead.custom.js') }}"></script><script src="{{ asset('assets/js/typeahead-search/handlebars.js') }}"></script><script src="{{ asset('assets/js/typeahead-search/typeahead-custom.js') }}"></script>{% endblock %}
